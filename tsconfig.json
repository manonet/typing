{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016",
    "baseUrl": "./",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@actions": ["./src/actions"],
      "@actions/*": ["./src/actions/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@images": ["./src/images"],
      "@images/*": ["./src/images/*"],
      "@intl": ["./src/intl"],
      "@intl/*": ["./src/intl/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@reducers": ["./src/reducers"],
      "@reducers/*": ["./src/reducers/*"],
      "@routes": ["./src/routes.tsx"],
      "@state": ["./src/state"],
      "@state/*": ["./src/state/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
    }
  }
}
